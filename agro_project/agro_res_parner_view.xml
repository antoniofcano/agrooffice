<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_agro_res_partner_form" model="ir.ui.view">
            <field name="name">agro.res.partner.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//page[@string='History']" position="after">
                        <page string="Explotaciones">
                            <field name="explotacion_ids" nolabel="1">
                                <tree string="Explotaciones">
                                    <field name="name"/>
                                    <field name="ref_catastral"/>
                                    <field name="sigpac_prov"/>
                                    <field name="sigpac_muni"/>
                                    <field name="sigpac_pol"/>
                                    <field name="sigpac_par"/>
                                    <field name="sigpac_rec"/>
                                    <field name="superficie"/>
                                    <field name="num_plantas"/>
                                    <field name="cultivo_id"/>
                                    <field name="variedad_id"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
            </field>
       </record>
   </data>
</openerp>
